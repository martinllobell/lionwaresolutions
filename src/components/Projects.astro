---
import ServiceCard from './ServiceCard.astro'
import {SERVICES} from '../data/constants'
---

<section
    class="flex flex-col gap-6 pt-12 pb-12 px-4 min-h-screen items-center justify-center"
    id="services">
    <div class="text-center mb-6">
      <h3 class="text-2xl sm:text-3xl md:text-4xl font-semibold text-gray-800 dark:text-gray-200">Our Services</h3>
      <h4 class=" text-xl sm:text-2xl md:text-3xl mt-5 font-semibold text-gray-700 dark:text-gray-300">
        Discover what <span class="text-primary">Lionware Solutions</span> are
      </h4>
     
    </div>

    <div class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 justify-items-center max-w-[1200px]">
      {SERVICES.map(service  => (
        <ServiceCard
          title={service.title}
          description={service.description}
          imgUrl={service.image} /> 
      ))}
    </div>
</section>

